<div class="modal fade" id="settingConfirmModal" tabindex="-1" aria-labelledby="settingConfirmModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="settingConfirmModalLabel">設定内容の確認</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <% if selected_settings.present? %>
          <table class="table table-bordered">
            <thead class="table-light">
              <tr>
                <th>設定名</th>
                <th>価格</th>
                <th>価格タイプ</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% selected_settings.each do |setting| %>
                <tr>
                  <td><%= setting["name"] %></td>
                  <td>
                    <% if setting["type"] == "safe" %>
                      <%= number_to_currency(setting["anshin_price"]) %>
                    <% else %>
                      <%= number_to_currency(setting["price"]) %>
                    <% end %>
                  </td>
                  <td>
                    <span class="badge <%= setting["type"] == "safe" ? "bg-info text-dark" : "bg-secondary" %>">
                      <%= setting["type"] == "safe" ? "安心" : "一般" %>
                    </span>
                  </td>
                  <td class="text-center">
                    <%= button_to "削除",
                          remove_setting_item_path(setting["id"], type: setting["type"]),
                          method: :delete,
                          class: "btn btn-sm btn-danger",
                          data: { turbo: false } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p class="text-muted text-center my-3">選択された設定はありません。</p>
        <% end %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
