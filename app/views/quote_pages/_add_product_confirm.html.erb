<div class="modal fade" id="productConfirmModal" tabindex="-1" aria-labelledby="productConfirmModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="productConfirmModalLabel">その他の内容の確認</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <% if selected_products.present? %>
          <table class="table table-bordered">
            <thead class="table-light">
              <tr>
                <th>製品名</th>
                <th>価格</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% selected_products.each do |product| %>
                <tr>
                  <td><%= product["name"] %></td>
                  <td><%= number_to_currency(product["price"]) %></td>
                  <td class="text-center">
                    <%= button_to "削除",
                          remove_product_item_path(product["id"]),
                          method: :delete,
                          class: "btn btn-sm btn-danger",
                          data: { turbo: false } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p class="text-muted text-center my-3">選択された製品はありません。</p>
        <% end %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
