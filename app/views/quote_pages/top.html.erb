<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="fw-bold">見積もり入力</h1>
  </div>

  <table class="table table-bordered align-middle w-75 mx-auto">
    <tbody>
      <!-- 本体 -->
      <tr>
        <th class="w-25">本体</th>
        <td>
          <div class="input-group w-auto">
            <input type="number" class="form-control" placeholder="金額を入力">
            <span class="input-group-text">円</span>
          </div>
        </td>
      </tr>

      <!-- クーポンの使用 -->
      <tr>
        <th>クーポンの使用</th>
        <td>
          <div class="input-group w-auto">
            <span class="input-group-text">−</span>
            <input type="number" class="form-control" placeholder="値引きを入力">
            <span class="input-group-text">円</span>
          </div>
        </td>
      </tr>

      <!-- 設定内容 -->
      <tr>
        <th>設定内容</th>
        <td>
          <%= link_to "設定内容を追加", quote_pages_add_setting_path, class: "btn btn-outline-primary mx-2" %>
          <button type="button" class="btn btn-info mx-2" data-bs-toggle="modal" data-bs-target="#settingConfirmModal">
            設定内容の確認
          </button>
        </td>
      </tr>

      <!-- その他の内容 -->
      <tr>
        <th>その他の内容</th>
        <td>
          <%= link_to "その他の内容を追加", quote_pages_add_product_path, class: "btn btn-outline-secondary mx-2" %>
          <button type="button" class="btn btn-info mx-2" data-bs-toggle="modal" data-bs-target="#productConfirmModal">
            その他の内容の確認
          </button>
        </td>
      </tr>

      <!-- ポイントの使用 -->
      <tr>
        <th>ポイントの使用</th>
        <td>
          <div class="input-group w-auto">
            <input type="number" class="form-control" placeholder="ポイント数を入力">
            <span class="input-group-text">P</span>
          </div>
        </td>
      </tr>
    </tbody>
  </table>

  <!-- ボタンエリア -->
  <div class="d-flex justify-content-center gap-3 mt-4">
    <button type="button" class="btn btn-secondary px-4">支払いを分ける</button>
    <button type="submit" class="btn btn-primary px-5">確認</button>
  </div>
</div>

<!-- 設定モーダル -->
<%= render "add_setting_confirm",
            selected_settings: @selected_settings,
            selected_products: @selected_products %>

<!-- 製品モーダル -->
<%= render "add_product_confirm",
            selected_products: @selected_products,
            selected_settings: @selected_settings %>

<% unless logged_in? %>
  <!-- オーバーレイ -->
  <div id="login-overlay">
    <div class="overlay-content text-center">
      <p>操作するにはログインが必要です。</p>
      <%= link_to "ログインページへ", login_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>
<% end %>