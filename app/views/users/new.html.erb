<div class="container mt-5">
  <h2 class="mb-4 text-center">ユーザー登録</h2>

  <%= form_with model: @user, local: true, class: "needs-validation" do |f| %>
    <div class="mb-3">
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name, class: "form-control", required: true, maxlength: 20, placeholder: "20文字以内で入力してください" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control", required: true, minlength: 4, placeholder: "4文字以上で入力してください" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "パスワード（確認用）" %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true, minlength: 4 %>
    </div>

    <div class="d-flex justify-content-end">
      <%= f.submit "登録する", class: "btn btn-primary px-4" %>
    </div>
  <% end %>

  <% if @user.errors.any? %>
    <div class="alert alert-danger mt-4">
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
