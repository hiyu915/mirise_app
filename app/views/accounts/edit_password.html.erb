<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <h2 class="text-center mb-4">パスワード変更</h2>

      <%= form_with model: current_user, url: update_password_account_path, method: :patch, local: true, class: "card p-4 shadow-sm" do |f| %>
        <div class="mb-3">
          <%= f.label :current_password, "現在のパスワード" %>
          <%= f.password_field :current_password, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "新しいパスワード" %>
          <%= f.password_field :password, class: "form-control", required: true, minlength: 4, placeholder: "4文字以上で入力してください" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
          <%= f.password_field :password_confirmation, class: "form-control", required: true, minlength: 4 %>
        </div>

        <div class="text-center">
          <%= f.submit "変更する", class: "btn btn-primary px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
