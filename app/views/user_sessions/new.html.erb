<div class="container mt-5">
  <h2 class="mb-4 text-center">ログイン</h2>

  <%= form_with url: login_path, local: true, class: "needs-validation" do |f| %>
    <div class="mb-3">
      <%= label_tag :name, "ユーザー名" %>
      <%= text_field_tag :name, params[:name], class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= label_tag :password, "パスワード" %>
      <%= password_field_tag :password, nil, class: "form-control", required: true %>
    </div>

    <div class="d-flex justify-content-end">
      <%= submit_tag "ログイン", class: "btn btn-primary px-4" %>
    </div>
  <% end %>
</div>
